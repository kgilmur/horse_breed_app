<div class="row">
  <div class="col-md-7 col-md-offset-1">

    <h1>View Horses by Discipline Tag: <small><%= params[:tag] %> </small></h1>

    <div><%= link_to "&larr; back to list".html_safe, horses_path %></div><br/>


    <div class="row">

      <div class="col-sm-8">
        <div class="tags">

          <h3>Horse Breeds Tagged: <%= params[:tag] %></h3>


          <% @horses.each do |horse| %>
          <p><%= link_to horse.breed, horse %></p>


          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>