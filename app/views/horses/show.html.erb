<div class="container">

  <div class="well col-sm-12 col-sm-offset-1" id="showtext">
    <h1 class="text-center" id="showhead"><%= @horse.breed %></h1>
    <div class="col-md-6">
      <p><strong>Origin: </strong> <%= @horse.origin %></p>
      <p><strong>Bloodtype: </strong> <%= @horse.bloodtype %></p>
      <div class="btn-group">
        <% @horse.tags.each do |tag| %>
        <%=button_to tag.name, "/horses/tag/#{tag.name}", method: :get, :class => "btn-tag btn-md" %>
        <%end%>
      </div>
      <br>
      <br>
      <div class="backlink"><%= link_to "&larr; back to list".html_safe, horses_path %></div>
    </div>

    <div class="col-md-6" id="showphotos">
      <div id="myCarousel" class="carousel slide" data-ride="carousel" class="carousel slide">
        <div class="carousel-inner" role="listbox">
          <% @results[0..25].each_with_index do |item, index| %>
          <div class="item <% if index == 0 %>active<% end %>">
            <%= link_to image_tag(item.first), item.last, :class => "hover" %>
          </div>
          <% end %>
        </div>
        <!-- Left and right controls -->
        <div>
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

