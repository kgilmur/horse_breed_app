
<h1 class="text-center" id="showhead"><%= @horse.breed %></h1>

<br>
<br>
<div class="container">
  <div class="col-md-6" id="showtext">
    <p><strong>Origin: </strong> <%= @horse.origin %></p>
    <p><strong>Bloodtype: </strong> <%= @horse.bloodtype %></p>



<div class="btn-group">
    <% @horse.tags.each do |tag| %>
      <%=button_to tag.name, "/horses/tag/#{tag.name}", method: :get, :class => "btn-tag btn-sm" %>

    <%end%>
</div>
<br>
<br>

<div class"col-md-6" id="backlink"><%= link_to "&larr; back to list".html_safe, horses_path %></div>
  </div>
<div class="col-md-6" id="showphotos">


<!-- <img src=<%= @result %>> -->

        <%# @results[0..23].each do |photo| %>
        <%# link_to image_tag(photo.first), photo.last, :class => "hover" %>

        <%# end %>



<div id="myCarousel" class="carousel slide" data-ride="carousel" class="carousel slide" style="width: 500px; margin: 0 auto">

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">


<% @results[0..23].each_with_index do |item, index| %>
        <div class="item <% if index == 0 %>active<% end %>">
      <%= link_to image_tag(item.first), item.last, :class => "hover" %>
    </div>
<% end %>


  </div>

  <!-- Left and right controls -->
  <div>
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>




</div>
</div>

