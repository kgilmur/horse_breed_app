<div class="container">

<h1 class="text-center">Add a New Horse Breed</h1>



<div class="well col-md-6 col-md-offset-3" id="newbreed">

  <div class="form-group form-group-lg">
    <%= bootstrap_form_for @horse do |f| %>
    <%= f.text_field :breed, :placeholder =>"Enter the Breed" %>
    <%= f.text_field :origin, :placeholder =>"Enter the Breed's Place of Origin" %>
    <%= f.text_field :bloodtype, :placeholder =>"Enter Bloodtpye (Hot ,Cold, Warm)" %>
    <%= f.collection_check_boxes :tags, Tag.all, :id, :name %>
    <%= f.submit "Submit new Horse Breed", class: "btn btn-tag btn-lg center-block" %>
    <% end %>
    <div><%= link_to "&larr; Back to List".html_safe, horses_path %></div>
  </div>
</div>
</div>