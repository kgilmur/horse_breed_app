<h1 class="text-center">Add a New Horse Breed to Our List</h1>



<div class="row">
  <div class="col-md-8 col-md-offset-2 form-group form-group-lg">
    <%= bootstrap_form_for @horse do |f| %>
    <%= f.text_field :breed, :placeholder =>"Enter the Breed", hide_label: true %>
    <%= f.text_field :origin, :placeholder =>"Enter the Breed's Place of Origin", hide_label: true%>
    <%= f.text_field :bloodtype, :placeholder =>"Enter Bloodtpye (Hot ,Cold, Warm)", hide_label: true %>
    <%= f.collection_check_boxes :tags, Tag.all, :id, :name %>
    <%= f.submit "Submit new Horse Breed", class:"btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>
</div>