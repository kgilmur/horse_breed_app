        <p><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary btn-xs" %> &nbsp <%= link_to 'Edit', [:edit, p], :class => "btn btn-primary btn-xs"%></p>

    </div>
  </div>
  <% end %>

</div>


